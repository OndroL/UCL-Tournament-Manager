<Window x:Class="UCL_Tournament_Manager.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <Button Command="{Binding NavigateToCreateTournamentCommand}" Content="Create Tournament" />
            <Button Command="{Binding NavigateToCreateTeamCommand}" Content="Create Team" />
            <ListBox ItemsSource="{Binding Tournaments}" DisplayMemberPath="Name" />
        </StackPanel>
    </Grid>
</Window>