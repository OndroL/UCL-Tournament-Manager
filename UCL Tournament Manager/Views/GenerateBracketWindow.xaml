<Window x:Class="UCL_Tournament_Manager.Views.GenerateBracketWindow"
        xmlns:local="clr-namespace:UCL_Tournament_Manager.Views"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Generate Bracket" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <TextBox Text="Select Tournament by ID" TextAlignment="Center"/>
            <TextBox Text="{Binding TournamentId, UpdateSourceTrigger=PropertyChanged}"/>
            <Button Command="{Binding GenerateBracketCommand}" Content="Generate Bracket" />
            <Button Command="{Binding NavigateBackCommand}" Content="Back to Main" />
        </StackPanel>
        <ItemsControl Grid.Row="1" ItemsSource="{Binding Matches}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <local:MatchView />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</Window>
