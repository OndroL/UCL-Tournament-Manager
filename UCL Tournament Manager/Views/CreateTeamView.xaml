<UserControl x:Class="UCL_Tournament_Manager.Views.CreateTeamView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel>
        <TextBlock Text="Creation of New Team" FontSize="20" FontWeight="Bold" Margin="10"/>
        <TextBlock Text="Choose a name for the Team" Margin="10,0,0,0"/>
        <TextBox Text="{Binding TeamName, UpdateSourceTrigger=PropertyChanged}"/>
        <Button Command="{Binding CreateTeamCommand}" Content="Create Team" Margin="5" />
        <Button Command="{Binding NavigateBackCommand}" Content="Back" Margin="5" />
    </StackPanel>
</UserControl>