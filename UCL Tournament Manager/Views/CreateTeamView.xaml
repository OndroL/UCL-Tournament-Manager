<UserControl x:Class="UCL_Tournament_Manager.Views.CreateTeamView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel>
        <TextBox Text="{Binding TeamName, UpdateSourceTrigger=PropertyChanged}" />
        <Button Command="{Binding CreateTeamCommand}" Content="Create Team" />
        <Button Command="{Binding NavigateBackCommand}" Content="Back to Main" />
        <ListBox ItemsSource="{Binding Teams}" DisplayMemberPath="Name" />
    </StackPanel>
</UserControl>